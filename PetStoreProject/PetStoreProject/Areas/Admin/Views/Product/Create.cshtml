        function isExistsAttribute(attribute) {
            var isExists = false
            var attributes = $('#attribute option')
            attributes.each(function () {
                if ($(this).text().trim().toLowerCase() === attribute.toLowerCase()) {
                    isExists = true;
                    return false;
                }
