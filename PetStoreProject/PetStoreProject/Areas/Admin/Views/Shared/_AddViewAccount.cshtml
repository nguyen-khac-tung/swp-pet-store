<style>
    .tf-button.style-1:hover {
        cursor:pointer;
    }
    .input-regis {
        border:none !important;
        border-bottom: 1px solid black !important;
    }

    button.btn.btn-secondary {
        font-size:18px;
    }
</style>
<div id="addAccount" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Đăng Ký Tài Khoản</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <h2 class="mt-5"></h2>
                    <form id="registrationForm" method="post" action="">
                        <div class="form-group row">
                            <label for="name" class="col-sm-3 col-form-label ">Họ và Tên<em>*</em></label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control input-regis" id="name" placeholder="Nhập họ và tên" required>
                            </div>
                        </div>
                        <div class="form-group row align-items-center">
                            <label for="dob" class="col-sm-3 col-form-label">Ngày Sinh</label>
                            <div class="col-sm-3">
                                <input type="date" class="form-control input-regis" id="dob">
                            </div>
                            <label class="col-sm-2 col-form-label text-right">Giới Tính:</label>
                            <div class="col-sm-4">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="gender" id="male" value="Nam">
                                    <label class="form-check-label" for="male">Nam</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="gender" id="female" value="Nữ">
                                    <label class="form-check-label" for="female">Nữ</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="email" class="col-sm-3 col-form-label">Email<em>*</em></label>
                            <div class="col-sm-9">
                                <input type="email" class="form-control input-regis" id="email" placeholder="Nhập email" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="phone" class="col-sm-3 col-form-label">Số Điện Thoại<em>*</em></label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control input-regis" id="phone" placeholder="Nhập số điện thoại" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="address" class="col-sm-3 col-form-label">Địa Chỉ<em>*</em></label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control input-regis" id="address" placeholder="Nhập địa chỉ" required>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <button type="button" class="btn btn-secondary" onclick="addAccount()">Tạo tài khoản</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>