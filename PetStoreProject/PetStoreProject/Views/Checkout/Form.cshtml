<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Mã giảm giá</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if(discounts == null)
                {
                    <span>Không có mã giảm giá nào</span>
                }
                else
                {
                    @foreach(var item in discounts)
                    {
                        <div class="discount-card @(item.Status == false ? "out-of-stock" : "")">
                            <div>
                                <div class="header">
                                    <img src="~/img/coupon.png" />
                                    <span class="title">@(item.DiscountType.Id != 2 ? "Giảm " + (int)item.Value + "% Giảm tối đa " + item.MaxValue?.ToString("#,###") + " VND" : "Giảm" + item.Value?.ToString("#,###") + " VND")</span>
                                </div>
                                <div class="content">
                                    <div class="description">Đơn Tối Thiểu @(((decimal)item.MinPurchase).ToString("#,###.###")) VND</div>
                                </div>
                                <div class="flex items-center justify-between gap10">
                                    <div class="progress-level-bar w-full">
                                        <span data-progress="@item.Used" data-max="@item.Quantity" class="">
                                        </span>
                                    </div>
                                </div>
                                <div class="text-tiny">Đã dùng @((int)(((decimal)item.Used / item.Quantity) * 100))%, HSD: @item.EndDate.ToString()</div>
                                <div class="footer">
                                    <div class="warning">@item.StatusString</div>
                                </div>
                            </div>
                            <div>
                                <input type="radio" name="discount" value="@item.Id" onclick="chooseDiscount.call(this)"></input>
                                <input type="hidden" name="title" value="@item.Title"></input>
                                <input type="hidden" name="reduce" value= "@item.Reduce"></input>
                            </div>
                        </div>
                        
                    }
                }
            </div>
            <div class="modal-footer" style="justify-content: space-between">
                <div style="width: 60%">
                    <div class="hide">
                        <span>1 mã giảm giá được áp dụng. </span>
                        <span id="title"></span>
                    </div>
                </div>
                
                <div>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" onclick="useDiscount()">Áp dụng</button>
                </div>
            </div>
        </div>
    </div>
</div>

