@{
    ViewData["Title"] = "Thanh toán";
    double totalAmount = 0;
    double moneyToCheckout = 0;
    int index = 0;
}

@using PetStoreProject.ViewModels;
@model List<ItemsCheckoutViewModel>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<link href="~/css/checkout_style.css" rel="stylesheet" />

<div class="cart-main-area adp_bottom">

    <div class="container">
        <div class="row my-4">
            <div class="col">
                <a href="/cart/detail" class="btn btn-link text-muted">
                    <i class="bi bi-arrow-left-short"></i>Trở lại giỏ hàng
                </a>
            </div> <!-- end col -->
            <div class="col">
                @*                       <div class="text-end mt-2 mt-sm-0">
                <a href="#" class="btn btn-success">
                <i class="mdi mdi-cart-outline me-1"></i> Xử lý
                </a>
                </div> *@
            </div> <!-- end col -->
        </div> <!-- end row-->
        <div class="row">


            <div class="col-xl-8">
                <div class="card">
                    <div class="card-body">
                        <div class="p-3 bg-light mb-3">
                            <h5 class="font-size-16 mb-0">Danh sách sản phẩm </h5>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-centered mb-0 table-nowrap">
                                <thead>
                                    <tr>
                                        <th class="border-top-0" style="width: 110px;" scope="col">Sản phẩm</th>
                                        <th class="border-top-0" scope="col">Mô tả sản phẩm</th>
                                        <th class="border-top-0" scope="col">Giá</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Count > 0)
                                    {
                                        foreach (var itemCart in Model)
                                        {

                                            var amount = itemCart.Price * itemCart.Quantity;
                                            totalAmount += amount;
                                            if (index > 2)
                                            {
                                                <tr id="display_product_@index" style="display: none">
                                                    <th scope="row"><img src="@itemCart.ImgUrl" alt="product-img" title="product-img" class="avatar-lg rounded"></th>
                                                    <td>
                                                        <h5 class="font-size-16 text-truncate"><a href="#" class="text-dark">@itemCart.Name</a></h5>
                                                        <h6 class="font-size-16 text-truncate">@itemCart.Option</h6>
                                                        <p class="text-muted mb-0">
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star-half text-warning"></i>
                                                        </p>
                                                        <p class="text-muted mb-0 mt-1">@itemCart.Price.ToString("#,###")đ x @itemCart.Quantity</p>
                                                    </td>
                                                    <td><p class="float_r margin_auto">@amount.ToString("#,###")đ</p></td>
                                                </tr>
                                            }
                                            else
                                            {
                                                <tr>
                                                    <th scope="row"><img src="@itemCart.ImgUrl" alt="product-img" title="product-img" class="avatar-lg rounded"></th>
                                                    <td>
                                                        <h5 class="font-size-16 text-truncate"><a href="#" class="text-dark">@itemCart.Name</a></h5>
                                                        <h6 class="font-size-16 text-truncate">@itemCart.Option</h6>
                                                        <p class="text-muted mb-0">
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star text-warning"></i>
                                                            <i class="bx bxs-star-half text-warning"></i>
                                                        </p>
                                                        <p class="text-muted mb-0 mt-1">@itemCart.Price.ToString("#,###")đ x @itemCart.Quantity</p>
                                                    </td>
                                                    <td><p class="float_r margin_auto">@amount.ToString("#,###")đ</p></td>
                                                </tr>
                                            }
                                            index++;
                                        }
                                    }
                                </tbody>
                            </table>

                        </div>
                        @if (Model != null && Model.Count > 3)
                        {
                            <div onclick="AddViewProduct()" class="text_center margin_auto padding_t addView_style"><button id="selectViewProduct" style="border:none; background: none">Xem thêm</button></div>

                        }
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <ol class="activity-checkout mb-0 px-4 mt-3">
                            <li class="checkout-item">
                                <div class="avatar checkout-icon p-1">
                                    <div class="avatar-title rounded-circle bg-primary">
                                        <i class="bi bi-receipt"></i>
                                    </div>
                                </div>
                                <div class="feed-item-list">
                                    <div>
                                        <h3 class=" mb-1">Thông tin người đặt</h3>
                                        <div class="mb-3">
                                            <form>
                                                <div>
                                                    <div class="row">
                                                        <div class="col-lg-8">
                                                            <div class="mb-3">
                                                                <label class="form-label" for="billing-name">Họ và tên (Người đặt)</label>
                                                                <input type="text" class="form-control" id="billing-name" placeholder="Nhập họ và tên">
                                                            </div>
                                                        </div>

                                                        <div class="col-lg-4">
                                                            <div class="mb-3">
                                                                <label class="form-label" for="billing-phone">Số điện thoại (Người đặt)</label>
                                                                <input type="text" class="form-control" id="billing-phone" placeholder="Nhập số điện thoại">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-lg-12">
                                                            <div class="mb-3">
                                                                <label class="form-label" for="billing-email-address">Email (Không bắt buộc)</label>
                                                                <input type="email" class="form-control" id="billing-email-address" placeholder="Nhập email (không bắt buộc)">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li class="checkout-item">
                                <div class="avatar checkout-icon p-1">
                                    <div class="avatar-title rounded-circle bg-primary">
                                        <i class="bi bi-truck"></i>
                                    </div>
                                </div>
                                <div class="feed-item-list">
                                    <div>
                                        <h3 class=" mb-1">Địa chỉ nhận hàng</h3>
                                        <div class="mb-3">
                                            <div class="row">
                                                <div class="col-lg-8">
                                                    <div class="mb-3">
                                                        <label class="form-label" for="billing-name">Họ và tên (Người nhận)</label>
                                                        <input type="text" class="form-control" id="billing-name" placeholder="Nhập họ và tên">
                                                    </div>
                                                </div>

                                                <div class="col-lg-4">
                                                    <div class="mb-3">
                                                        <label class="form-label" for="billing-phone">Số điện thoại (Người nhận)</label>
                                                        <input type="text" class="form-control" id="billing-phone" placeholder="Nhập số điện thoại">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="mb-3">
                                                        <select class="form-control form-select" id="provinces" title="Country" onchange="getProvinces(event)">
                                                            <option value="0"><strong>- Tỉnh/Thành phố -</strong></option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="mb-3">
                                                        <select class="form-control form-select" id="districts" title="Country" onchange="getDistricts(event)">
                                                            <option value="0"><strong>- Quận/Huyện/Thị xã -</strong></option>
                                                        </select>
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="mb-3">
                                                        <select class="form-control form-select" id="wards" title="Country">
                                                            <option value="0"><strong>- Xã/Phường/Thị trấn -</strong></option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="mb-3">
                                                    <label class="form-label" for="billing-address">Nhập địa chỉ cụ thể: </label>
                                                    <textarea class="form-control" id="billing-address" rows="3" placeholder="Nhập địa chỉ chi tiết"></textarea>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li class="checkout-item">
                                <div class="avatar checkout-icon p-1">
                                    <div class="avatar-title rounded-circle bg-primary">
                                        <i class="bi bi-wallet-fill"></i>
                                    </div>
                                </div>
                                <div class="feed-item-list">
                                    <div>
                                        <h3 class=" mb-1">Thông tin thanh toán</h3>
                                    </div>
                                    <div>
                                        <h5 class="font-size-14 mb-3">Phương thức thanh toán :</h5>
                                        <div class="row">
                                            <div class="col-lg-3 col-sm-6">
                                                <div data-bs-toggle="collapse">
                                                    <label class="card-radio-label">
                                                        <input type="radio" name="pay-method" id="pay-methodoption1" class="card-radio-input">
                                                        <span class="card-radio py-3 text-center text-truncate">
                                                            <img src="~/img/zalopay.jpg" />
                                                            VNpay
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>

                                            <div class="col-lg-3 col-sm-6">
                                                <div>
                                                    <label class="card-radio-label">
                                                        <input type="radio" name="pay-method" id="pay-methodoption2" class="card-radio-input">
                                                        <span class="card-radio py-3 text-center text-truncate">
                                                            <i class="bx bxl-paypal d-block h2 mb-3"></i>
                                                            Paypal
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>

                                            <div class="col-lg-3 col-sm-6">
                                                <div>
                                                    <label class="card-radio-label">
                                                        <input type="radio" name="pay-method" id="pay-methodoption3" class="card-radio-input" checked="">

                                                        <span class="card-radio py-3 text-center text-truncate">
                                                            <i class="bx bx-money d-block h2 mb-3"></i>
                                                            <span>Cash on Delivery</span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ol>
                    </div>
                </div>


            </div>
            <div class="col-xl-4">
                <div class="card checkout-order-summary">
                    <div class="card-body">
                        <div class="p-3 bg-light mb-3">
                            <h5 class="font-size-16 mb-0">Tổng đơn hàng <span class="float-end ms-2">#MN0124</span></h5>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-centered mb-0 table-nowrap">
                                <tbody>
                                    <tr>
                                        <td colspan="2">
                                            <h5 class="font-size-14 m-0">Tổng tiền: </h5>
                                        </td>
                                        <td>
                                            <p class="float_r margin_auto">
                                                @totalAmount.ToString("#,###")đ
                                                @{
                                                    moneyToCheckout = totalAmount;
                                                }
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            <h5 class="font-size-14 m-0">Mã giảm giá: </h5>
                                        </td>
                                        <td>
                                            <p class="float_r margin_auto">-123$</p>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td colspan="2">
                                            <h5 class="font-size-14 m-0">Tiết kiệm được: </h5>
                                        </td>
                                        <td>
                                            <p class="float_r margin_auto">-123$</p>
                                        </td>
                                    </tr>
                                    @*                                     <tr>
                                    <td colspan="2">
                                    <h5 class="font-size-14 m-0">Estimated Tax: </h5>
                                    </td>
                                    <td>
                                    $ 18.20
                                    </td>
                                    </tr> *@

                                    <tr class="bg-light">
                                        <td colspan="2">
                                            <h5 class="font-size-14 m-0"><strong>Thành tiền: </strong></h5>
                                        </td>
                                        <td>
                                            <p class="float_r margin_auto"><strong>@moneyToCheckout.ToString("#,###")đ</strong></p>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div><button class="btn_done_checkout">Hoàn tất thanh toán</button></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end row -->

    </div>
</div>

<script>
    var numberViewProduct = 2;
    fetch('https://vapi.vnappmob.com/api/province/')
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        })
        .then(data => {
            let provinces = data.results;
            provinces.map(value => document.getElementById('provinces').innerHTML += '<option value="' + value.province_id + '">' + value.province_name + '</option>');
        })
        .catch(error => {
            console.error('There was a problem with the fetch operation:', error);
        });

    function getProvinces(event) {
        let province_id = event.target.value;
        fetchDistricts(province_id);
    }

    function fetchDistricts(province_id) {
        fetch('https://vapi.vnappmob.com/api/province/district/' + province_id)
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                let districts = data.results;
                document.getElementById('districts').innerHTML = '<option value="0">- Xã/Phường/Thị trấn -</option>';
                document.getElementById('wards').innerHTML = '<option value="0">- Quận/Huyện/Thị xã -</option>';
                districts.map(value => document.getElementById('districts').innerHTML += '<option value="' + value.district_id + '">' + value.district_name + '</option>');
            })
            .catch(error => {
                console.error('There was a problem with the fetch operation:', error);
            });
    }

    function getDistricts(event) {
        let district_id = event.target.value;
        fetchWards(district_id);
    }

    function fetchWards(district_id) {
        fetch('https://vapi.vnappmob.com/api/province/ward/' + district_id)
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                let districts = data.results;
                document.getElementById('wards').innerHTML = '<option value="0">- Quận/Huyện/Thị xã -</option>';
                districts.map(value => document.getElementById('wards').innerHTML += '<option value="' + value.ward_id + '">' + value.ward_name + '</option>');
            })
            .catch(error => {
                console.error('There was a problem with the fetch operation:', error);
            });
    }

    function AddViewProduct() {
        if ($('#selectViewProduct').text() === "Rút gọn") {
            for (let i = 2; i <= @index; i++) {
                $('#display_product_' + i).css({ 'display': 'none' });
            }
            numberViewProduct = 1;
            $('#selectViewProduct').text("Xem thêm");
        } else {
            if (numberViewProduct > @index) {
                for (let i = @index; i >= 2; i--) {
                    if (numberViewProduct === @index) {
                        break;
                    }
                    $('#display_product_' + i).css({ 'display': 'none' });
                    numberViewProduct -= 1;
                }
                $('#selectViewProduct').text("Xem thêm");
            } else {
                const viewProductMin = Math.min(@index - numberViewProduct, 3);
                for (let i = 0; i < viewProductMin; i++) {
                    numberViewProduct += 1;
                    $('#display_product_' + numberViewProduct).css({ 'display': '' });
                }
                if (numberViewProduct >= @index) {
                    $('#selectViewProduct').text("Rút gọn");
                }
            }
        }
    }


</script>