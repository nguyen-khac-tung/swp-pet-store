@using PetStoreProject.ViewModels
@model PetStoreProject.ViewModels.ConsultationCreateRequestViewModel;
@{
    ViewData["Title"] = "Tư Vấn";
    var result = ViewData["Result"];
}
    <!-- Regester Page Start Here -->
<input type="hidden" value="@result" id="result">
    <div class="register-area adp_top adp_bottom">
        <div class="container">
            <div class="row">

                <div class="col-lg-3 col-md-4 col-12">
                    <div class="area-details">
                        <ul>
                            <li class="single-quick-contact">
                                <h5>Số điện thoại liên lạc</h5>
                                <p>
                                    <a href="tel:+0987456321">039 848 6547</a>
                                </p>
                            </li>
                            <li class="single-quick-contact">
                                <h5>Email liên lạc</h5>
                                <p>
                                    <a href="mailto:animartpetshop@gmail.com">animartpetshop@gmail.com</a>
                                </p>
                            </li>
                            <li class="single-quick-contact">
                                <h5>Địa chỉ liên lạc</h5>
                                <p>Khu Giáo dục và Đào tạo, Khu Công Nghệ Cao Hòa Lạc, Km29 Đại lộ Thăng Long, Thạch Hoà, Thạch Thất, Hà Nội</p>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-9 col-md-8 col-12">
                    <div class="contact_wrapper clearfix">
                        <div class="small-title">
                            <h3>Hộp thoại tư vấn</h3>
                            <br>
                        </div>
                        <form asp-controller="Consultation" asp-action="Create" method="post">
                        <div class="form-group row mt-3">
                            <div class="col-lg-12 col-md-12">
                                <label asp-for="CustomerName" class="col-form-label">Họ và Tên<em>*</em></label>
                                <input asp-for="CustomerName" class="form-control">
                                <span asp-validation-for="CustomerName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="address-wrapper row mt-3">
                            <div class="col-md-6">
                                <div class="address-email">
                                    <label asp-for="Email" class="col-form-label">Email<em>*</em></label>
                                    <input asp-for="Email" class="form-control">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="address-web">
                                    <label asp-for="Phone" class="col-form-label">Số điện thoại</label>
                                    <input asp-for="Phone" class="form-control">
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="address-wrapper row mt-3">
                            <div class="col-md-12">
                                <div class="address-subject">
                                    <label asp-for="Title" class="col-form-label">Tiêu đề<em>*</em></label>
                                    <input asp-for="Title" class="form-control">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="address-wrapper row mt-3">
                            <div class="col-md-12">
                                <div class="address-textarea">
                                    <label asp-for="Content" class="col-form-label">Nội dung tư vấn<em>*</em></label>
                                    <input asp-for="Content" class="form-control tall-input">
                                    <span asp-validation-for="Content" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="footer-content mail-content clearfix mt-5">
                            <div class="send-email float-md-right">
                                <button type="submit" class="login-btn">Gửi</button>
                            </div>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section ScriptOptional{
        <script>
            var result = $('#result').val().trim()
            console.log(result)
            if(result != ''){
                alert('Tạo yêu cầu thành công')
            }
        </script>
    }
    
