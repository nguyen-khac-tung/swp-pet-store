@using X.PagedList.Mvc.Core
@using X.PagedList

@model IPagedList<PetStoreProject.ViewModels.NewsViewModel>;
@{
	ViewData["Title"] = "Tin Tức";
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <style>
		.blog-column {
			display: flex;
			flex-direction: column;
			margin: 10px;
			flex: 1;
		}

		.single-animart-blog {
			display: flex;
			flex-direction: column;
			justify-content: space-between;
			height: 100%;
			border: 1px solid #ddd;
			padding: 15px;
			box-sizing: border-box;
		}

		.grid-blog-content {
			flex-grow: 1;
		}

		.blog-post-container {
			display: flex;
			flex-direction: column;
			height: 100%;
		}

		.grid-blog-content {
			flex-grow: 1;
			display: flex;
			flex-direction: column;
			justify-content: space-between;
		}

		.blog-btn {
			display: flex;
			justify-content: center;
			margin-top: auto;
		}

		.pagination-blog {
			display: flex;
			justify-content: center;
			margin-top: 20px; 

		.pagination {
			display: flex;
			list-style: none;
			padding: 0;
			margin: 0;
			justify-content: center;
		}

			.pagination li {
				margin: 0 5px;
			}

			.pagination a, .pagination span {
				color: #007bff;
				text-decoration: none;
				border: 1px solid #dee2e6;
				padding: 8px 12px;
				border-radius: 4px;
				transition: background-color 0.3s;
			}

				.pagination a:hover {
					background-color: #e9ecef;
				}

			.pagination .active span {
				background-color: #007bff;
				color: white;
				border-color: #007bff;
			}

    </style>
</head>
<body>
	<div class="blog-area adp_top adp_bottom">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-xl-12 col-lg-10">
					<div class="row">
						@foreach (var news in Model)
						{
							<div class="col-lg-3 col-md-3">
								<div class="single-animart-blog">
									<div class="blog-img" style="height: 250px;">
										<a href="/News/Detail?newsId=@news.NewsId">
											<img src="@news.url_thumnail" alt="blog-img">
										</a>
										<div class="publish-meta-date">
											<span>@news.DateOnly</span>
										</div>
									</div>
									<div class="grid-blog-content">
										<h4>
											<a href="/News/Detail?newsId=@news.NewsId">@news.Title</a>
										</h4>
										<ul class="blog-post-meta">
											<li>Người Đăng: Animart</li>
										</ul>
										<p>@news.Description</p>
										<div class="blog-btn">
											<a href="/News/Detail?newsId=@news.NewsId">Đọc thêm</a>
										</div>
									</div>
								</div>
							</div>
						}
					</div>
				</div>
			</div>
			<div class="pagination-blog">
				@Html.PagedListPager(Model, page => Url.Action("List", new { page, pagesize = 12 }))
			</div>
		</div>
	</div>
</body>
</html>

